<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.co.ezenac.cjy.teamproject.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/ultraViolet">
        <ImageView
            android:id="@+id/img_mainBack"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/left_arrow" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal"
        android:id="@+id/linear_card">
            <RelativeLayout
                android:layout_width="191dp"
                android:layout_height="180dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/img_mainProfile"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/jc_ultraviolet2"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#999999"
                    android:layout_centerInParent="true" />
            </RelativeLayout>
        <RelativeLayout
            android:layout_width="191dp"
            android:layout_height="180dp">
                <TextView
                    android:id="@+id/text_mainId"
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:text="My name is ..."
                    android:layout_marginTop="65dp" />
                <TextView
                    android:id="@+id/text_mainContent"
                    android:layout_width="180dp"
                    android:layout_height="80dp"
                    android:text="here write your content"
                    android:layout_below="@+id/text_mainId"
                    android:layout_marginTop="5dp"/>

        </RelativeLayout>
    </LinearLayout>

    <GridView
        android:id="@+id/gird_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linear_card"
        android:numColumns="3"></GridView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout_main"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/img_home"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/page_home_2"
            />

        <ImageView
            android:id="@+id/img_search"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="45dp"
            android:background="@drawable/searcher_2"
            />

        <ImageView
            android:id="@+id/img_input"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/add2"
            android:layout_marginLeft="45dp"
            />

        <ImageView
            android:id="@+id/img_option"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="45dp"
            android:background="@drawable/settings"
            />
    </LinearLayout>

</RelativeLayout>
