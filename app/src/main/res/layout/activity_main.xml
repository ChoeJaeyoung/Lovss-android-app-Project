<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainpage_id"
    tools:context="kr.co.ezenac.cjy.teamproject.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/ultraViolet">
        <ImageView
            android:id="@+id/img_mainBack"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal"
        android:id="@+id/linear_card">
            <RelativeLayout
                android:layout_width="191dp"
                android:layout_height="180dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/img_mainProfile"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/jc_ultraviolet2"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#999999"
                    android:layout_centerInParent="true" />
            </RelativeLayout>
        <RelativeLayout
            android:layout_width="191dp"
            android:layout_height="180dp">
                <TextView
                    android:id="@+id/text_mainId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My name is ..."
                    android:layout_marginTop="65dp" />
                <TextView
                    android:id="@+id/text_mainContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="here write your content"
                    android:layout_below="@+id/text_mainId"
                    android:layout_marginTop="5dp"/>
                <Button
                    android:id="@+id/change_word"
                    android:layout_marginTop="20dp"
                    android:layout_alignRight="@id/text_mainContent"
                    android:layout_below="@id/text_mainContent"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/settings"
                    />

        </RelativeLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/btn_room"
        android:layout_below="@+id/linear_card"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/list_2"
        android:layout_marginLeft="20dp"

        />

    <ImageView
        android:id="@+id/btn_collection"
        android:layout_toRightOf="@+id/btn_room"
        android:layout_below="@+id/linear_card"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/starr"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_room"
        android:layout_above="@+id/linearLayout_main">

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout_main"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/img_home"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/page_home_2"
            />

        <ImageView
            android:id="@+id/img_search"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="45dp"
            android:background="@drawable/searcher_2"
            />

        <ImageView
            android:id="@+id/img_input"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/add2"
            android:layout_marginLeft="45dp"
            />

        <ImageView
            android:id="@+id/img_option"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="45dp"
            android:background="@drawable/btn_home_profile"
            />
        <ImageView
            android:id="@+id/btn_logout"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="45dp"
            android:background="@drawable/logout"
            />
    </LinearLayout>

</RelativeLayout>
