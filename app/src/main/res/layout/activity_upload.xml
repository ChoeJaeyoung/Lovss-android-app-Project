<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kr.co.ezenac.cjy.teamproject.upload_Activity">


    <TextView
        android:id="@+id/btn_upload"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:text="완료"
        android:textSize="23dp"
        android:gravity="center"
        android:background="@drawable/square2"
        android:textColor="@color/colorPrimary"
        android:layout_margin="8dp"
        />

    <EditText
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:hint="방의 제목을 정합니다"
        android:layout_below="@id/linear_photo"
        />

    <Button
        android:id="@+id/btn_open_room"
        android:layout_below="@id/text_title"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@drawable/unlock_before"

        />

    <Button
        android:id="@+id/btn_hidden_room"
        android:layout_below="@id/text_title"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/lock_before"

        />


    <LinearLayout
        android:id="@+id/linear_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/btn_upload"
        android:gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="방의 대표사진을 정하세요"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        />
    <ImageView
        android:id="@+id/img_add"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_upload"
        android:background="@drawable/albums"></ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout_upload"
        android:background="#ffffff"
        >

        <ImageView
            android:id="@+id/img_room_home"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/page_home_2"
            />

        <ImageView
            android:id="@+id/img_room_search"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="45dp"
            android:background="@drawable/searcher_2"
            />

        <ImageView
            android:id="@+id/img_room_input"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/add"
            android:layout_marginLeft="45dp"
            />

        <ImageView
            android:id="@+id/img_room_option"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="45dp"
            android:background="@drawable/update_profile_img"
            />
        <ImageView
            android:id="@+id/btn_logout"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="45dp"
            android:background="@drawable/logout"
            />
    </LinearLayout>



</RelativeLayout>