<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kr.co.ezenac.cjy.teamproject.upload_Activity">



    <ImageView
        android:id="@+id/btn_titleImg"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/user_avatar"
        android:layout_margin="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="방 프로필 사진"
        android:layout_toRightOf="@id/btn_titleImg"
        android:layout_alignBottom="@id/btn_titleImg"
        />

    <TextView
        android:id="@+id/btn_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="완료"
        android:textSize="20dp"
        android:layout_margin="10dp"
        />

    <EditText
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:hint="방의 제목을 정합니다"
        android:layout_below="@id/img_add"
        />

    <Button
        android:id="@+id/btn_open_room"
        android:layout_below="@id/img_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:hint="공개방"

        />

    <Button
        android:id="@+id/btn_hidden_room"
        android:layout_below="@id/img_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:hint="비공개방"
        />


    <ImageView
        android:layout_below="@id/btn_upload"
        android:id="@+id/img_add"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/image_border"
        />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout_upload"
        android:background="#ffffff"
        >

        <ImageView
            android:id="@+id/img_room_home"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/page_home_2"
            />

        <ImageView
            android:id="@+id/img_room_search"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="45dp"
            android:background="@drawable/searcher_2"
            />

        <ImageView
            android:id="@+id/img_room_input"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/add"
            android:layout_marginLeft="45dp"
            />

        <ImageView
            android:id="@+id/img_room_option"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="45dp"
            android:background="@drawable/update_profile_img"
            />
        <ImageView
            android:id="@+id/btn_logout"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="45dp"
            android:background="@drawable/logout"
            />
    </LinearLayout>



</RelativeLayout>