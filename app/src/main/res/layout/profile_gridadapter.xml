<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="85dp"
    android:orientation="vertical"
    android:padding="2dp"
    android:background="@drawable/girdbox">

    <ImageView
       android:id="@+id/img_proGridRoom"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/daily_cover" >
        </ImageView>
    <Button
        android:id="@+id/btn_proDelete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/delete"
        android:layout_alignParentRight="true"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/text_proGridRoom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="RoomName"
        android:textSize="11dp"
        android:layout_below="@+id/img_proGridRoom"
        android:gravity="center"/>
    </RelativeLayout>
