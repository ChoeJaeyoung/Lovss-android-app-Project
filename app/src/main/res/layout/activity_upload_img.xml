<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kr.co.ezenac.cjy.teamproject.upload_Activity">



    <TextView
        android:id="@+id/upload_img_btn_upload"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:text="완료"
        android:textSize="23dp"
        android:gravity="center"
        android:background="@drawable/square2"
        android:textColor="@color/colorPrimary"
        android:layout_margin="8dp"
        />

        <EditText
            android:id="@+id/upload_img_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:hint="간단한 글은 사진을 더욱 빛나게 해요"
            android:layout_below="@id/upload_img_img_add"
        />

        <ImageView
            android:layout_below="@id/upload_img_btn_upload"
            android:id="@+id/upload_img_img_add"
            android:background="@drawable/gallery"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:src="@drawable/image_border"
            />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout_upload_img"
        android:background="#ffffff"
        >

        <ImageView
            android:id="@+id/img_room_home"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/page_home_2"
            />

        <ImageView
            android:id="@+id/img_room_search"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="45dp"
            android:background="@drawable/searcher_2"
            />

        <ImageView
            android:id="@+id/img_room_input"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/add2"
            android:layout_marginLeft="45dp"
            />

        <ImageView
            android:id="@+id/img_room_option"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="45dp"
            android:background="@drawable/btn_home_profile"
            />
        <ImageView
            android:id="@+id/btn_logout"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="45dp"
            android:background="@drawable/logout"
            />
    </LinearLayout>


</RelativeLayout>