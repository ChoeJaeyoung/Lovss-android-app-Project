<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingTop="5dp">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img_roomImg"
            android:layout_width="41dp"
            android:layout_height="38dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/jc_ultraviolet2"
            app:civ_border_color="#FF000000" />

        <TextView
            android:id="@+id/text_roomName"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:hint="Room Name"
            android:textColor="#000000"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="460dp">
        <ImageView
            android:id="@+id/img_homeAdapter"
            android:layout_width="330dp"
            android:layout_height="380dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/daily_cover"
            android:layout_marginTop="15dp"/>
        <TextView
            android:id="@+id/text_homeAdapter"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:hint="Content"
            android:layout_alignLeft="@+id/img_homeAdapter"
            android:layout_below="@id/img_homeAdapter"
            android:layout_marginLeft="7dp"/>
        
        <ImageView
            android:id="@+id/img_star"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/star"
            android:layout_alignRight="@+id/img_homeAdapter"
            android:layout_below="@+id/img_homeAdapter"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/under_line"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>